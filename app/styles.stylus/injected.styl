.org-viewer
  &html, body
    height 100%

  body
    font-family "Helvetica", "Arial", "Meiryo", sans-serif
    font-size 12pt
    margin 0
    background #eee

  a
    color #69c

  .org-title
    font-weight bold
    font-size 2rem

  .section-number:after
    content ". "

  .title
    position fixed
    top 0
    left 0
    width 16rem
    margin 0
    padding 1rem 2rem
    font-size 1rem
    line-height 1
    text-align center
    background #3b8
    color #fff
    a
      color inherit
      padding 0.5em 1em
      text-decoration none
    a:hover
      background rgba(255, 255, 255, 0.25)

  .table-of-contents
    position fixed
    top 3rem
    bottom 0
    left 0
    width 20rem
    overflow auto
    background #333
    color #999
    padding 1rem 0
    h2
      display none
    ul
      list-style none
      padding 0
      margin 0
    a
      display block
      padding 0.25rem 2rem
      color inherit
      text-decoration none
    a:hover
      background #444

  .page
    margin-left 20rem
    padding 2rem
    max-width 50rem
    box-sizing border-box
    overflow auto
    background #fff
    color #444

  span.task-status
    border-radius 0.25em
    margin-right 0.25em
    padding 0 0.25em
    &.todo
      background #f66
      color #fff
    &.done
      background #4a4
      color #fff

  table
    border-collapse collapse
    border-top 1px solid #999
    border-bottom 1px solid #999
    margin 1em auto
  th, td
    padding 0.5em 1em
  th
    border-bottom 1px solid #999
    background #666
    color #ddd
  tr:nth-child(2n+1)
    background #eee
